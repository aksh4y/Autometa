<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="112dp"
    android:background="@color/colorPrimaryDark"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="19dp"
        android:layout_marginLeft="19dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/logo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/logo"
        android:layout_toEndOf="@+id/logo"
        android:textColor="#64dd17"/>

    <TextView
        android:id="@+id/countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/bg_screen1"
        android:layout_centerVertical="true"
        android:textSize="50sp"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp" />

    <ImageView
        android:id="@+id/done"
        android:contentDescription="@string/app_name"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_done"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"/>

    <TextView
        android:id="@+id/notif_title"
        android:layout_width="0dp"
        android:ellipsize="none"
        android:maxLines="100"
        android:scrollHorizontally="false"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_toRightOf="@id/countdown"
        android:layout_toEndOf="@+id/countdown"
        android:layout_toLeftOf="@+id/cancel_btn"
        android:layout_toStartOf="@id/cancel_btn"
        android:layout_centerVertical="true" />

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_btn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:text="@string/cancel_btn_lbl"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>